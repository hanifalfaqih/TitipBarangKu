<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.homepage.HomepageFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_total_sales"
        style="@style/Nunito.16.Title"
        android:layout_margin="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Total Penjualan" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_total_amount_sales"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@id/tv_total_sales"
        app:layout_constraintStart_toStartOf="@+id/tv_total_sales"
        app:layout_constraintTop_toBottomOf="@id/tv_total_sales"
        app:strokeColor="@android:color/darker_gray"
        app:strokeWidth="@dimen/_1sdp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_total_amount_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:textSize="@dimen/_16ssp"
            android:text="Total Penjualan"
            android:textColor="@color/purple_500"
            android:layout_margin="@dimen/_8sdp"
            app:drawableStartCompat="@drawable/ic_money" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/deposit"
        style="@style/Nunito.16.Title"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_24sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_total_amount_sales"
        android:text="Deposit" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_deposit_unfinished"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cv_total_amount_sales"
        app:layout_constraintStart_toStartOf="@id/cv_total_amount_sales"
        app:layout_constraintTop_toBottomOf="@id/deposit" />

</androidx.constraintlayout.widget.ConstraintLayout>