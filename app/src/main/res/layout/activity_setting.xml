<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_store_name"
        style="@style/Nunito.16.Title"
        android:layout_margin="@dimen/_16sdp"
        android:drawablePadding="@dimen/_8sdp"
        android:drawableTint="@color/brown_500"
        android:text="@string/business_name"
        app:drawableStartCompat="@drawable/ic_store"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="@dimen/_37sdp"
        android:layout_height="@dimen/_37sdp"
        android:background="@android:color/transparent"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="@+id/user_store_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_store_name" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        app:dividerThickness="1dp"
        app:dividerColor="@color/gray_item_divider"
        app:dividerInsetStart="@dimen/_16sdp"
        app:dividerInsetEnd="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/user_store_name"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_languange"
        android:tint="@color/brown_500"
        app:layout_constraintBottom_toBottomOf="@+id/app_language"
        app:layout_constraintStart_toStartOf="@+id/user_store_name"
        app:layout_constraintTop_toTopOf="@+id/app_language" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/app_language"
        style="@style/Nunito.16.Title"
        android:layout_marginTop="@dimen/_16sdp"
        android:drawablePadding="@dimen/_8sdp"
        android:text="@string/app_language"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@id/btn_restore"
        app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
        app:layout_constraintTop_toBottomOf="@id/divider_1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/selected_language"
        style="@style/Nunito.12.Body"
        app:layout_constraintEnd_toEndOf="@id/app_language"
        app:layout_constraintStart_toStartOf="@+id/app_language"
        app:layout_constraintTop_toBottomOf="@id/app_language"
        tools:text="Indonesia" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        app:dividerThickness="1dp"
        app:dividerColor="@color/gray_item_divider"
        app:dividerInsetStart="@dimen/_16sdp"
        app:dividerInsetEnd="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/selected_language"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/history_total_sales"
        style="@style/Nunito.16.Title"
        android:layout_marginTop="@dimen/_16sdp"
        android:drawablePadding="@dimen/_8sdp"
        android:drawableTint="@color/brown_500"
        android:text="@string/history_sales_each_month"
        app:drawableStartCompat="@drawable/ic_sales"
        app:layout_constraintEnd_toEndOf="@id/btn_restore"
        app:layout_constraintStart_toStartOf="@+id/appCompatImageView"
        app:layout_constraintTop_toBottomOf="@id/divider_2" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        app:dividerThickness="1dp"
        app:dividerColor="@color/gray_item_divider"
        app:dividerInsetStart="@dimen/_16sdp"
        app:dividerInsetEnd="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/history_total_sales"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        app:dividerColor="@color/gray_item_divider"
        app:dividerInsetEnd="@dimen/_16sdp"
        app:dividerInsetStart="@dimen/_16sdp"
        app:dividerThickness="1dp"
        app:layout_constraintTop_toBottomOf="@+id/date_and_time_last_backup" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/delete_all_data"
        style="@style/Nunito.16.Title"
        android:drawablePadding="@dimen/_8sdp"
        android:drawableTint="@color/brown_500"
        android:text="@string/delete_all_data"
        android:layout_marginTop="@dimen/_16sdp"
        app:drawableStartCompat="@drawable/ic_delete_white"
        app:layout_constraintEnd_toEndOf="@id/btn_restore"
        app:layout_constraintStart_toStartOf="@+id/appCompatImageView"
        app:layout_constraintTop_toBottomOf="@id/divider_3" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        app:dividerColor="@color/gray_item_divider"
        app:dividerInsetEnd="@dimen/_16sdp"
        app:dividerInsetStart="@dimen/_16sdp"
        app:dividerThickness="1dp"
        app:layout_constraintTop_toBottomOf="@+id/delete_all_data" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_backup"
        style="@style/Button"
        android:text="@string/backup"
        app:layout_constraintEnd_toStartOf="@+id/btn_restore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_restore"
        style="@style/Button"
        android:text="@string/restore"
        app:layout_constraintBottom_toBottomOf="@+id/btn_backup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_backup"
        app:layout_constraintTop_toTopOf="@+id/btn_backup" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/history_last_backup"
        style="@style/Nunito.10.Body"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="@string/last_backup_data"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/btn_restore"
        app:layout_constraintStart_toStartOf="@+id/btn_backup"
        app:layout_constraintTop_toBottomOf="@id/btn_restore" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/date_and_time_last_backup"
        style="@style/Nunito.10.Body"
        android:text="-"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/history_last_backup"
        app:layout_constraintStart_toStartOf="@+id/history_last_backup"
        app:layout_constraintTop_toBottomOf="@+id/history_last_backup" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        style="@style/ButtonSecondary"
        android:text="@string/logout"
        android:textColor="@android:color/holo_red_dark"
        app:icon="@drawable/ic_logout"
        app:iconGravity="textStart"
        app:iconTint="@android:color/holo_red_dark"
        android:layout_marginBottom="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
